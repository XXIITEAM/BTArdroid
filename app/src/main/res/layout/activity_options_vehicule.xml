<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:text="Configuration des paramètres véhicule"
        android:textSize="18sp"
        android:textStyle="bold|italic" />

    <TableLayout
        android:layout_width="372dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="104dp"
        android:padding="10dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:minHeight="40dp"
            android:padding="3dp">

            <TextView
                android:id="@+id/tv_zone_4_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zone max"
                android:textAlignment="viewStart" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_zone_max"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:inputType="numberDecimal"
                android:textAllCaps="false"
                android:textSize="12sp">

            </android.support.design.widget.TextInputEditText>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="40dp"
            android:padding="3dp">

            <TextView
                android:id="@+id/tv_zone_4_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entrée zone 4"
                android:textAlignment="viewStart" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_zone_4"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:inputType="numberDecimal"
                android:textAllCaps="false"
                android:textSize="12sp">

            </android.support.design.widget.TextInputEditText>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:minHeight="40dp"
            android:padding="3dp">

            <TextView
                android:id="@+id/tv_zone_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entrée zone 3" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_zone_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:inputType="numberDecimal"
                android:padding="1dp"
                android:textSize="12sp">

            </android.support.design.widget.TextInputEditText>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:minHeight="40dp"
            android:padding="3dp">

            <TextView
                android:id="@+id/tv_zone_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entrée zone 2" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_zone_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:inputType="numberDecimal"
                android:padding="1dp"
                android:textSize="12sp">

            </android.support.design.widget.TextInputEditText>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:minHeight="40dp"
            android:padding="3dp">

            <TextView
                android:id="@+id/tv_zone_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entrée zone 1" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_zone_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:inputType="numberDecimal"
                android:padding="1dp"
                android:textSize="12sp">

            </android.support.design.widget.TextInputEditText>
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/boutonEnvoyerParam"
        android:layout_width="267dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView7"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="21dp"
        android:layout_marginBottom="127dp"
        android:onClick="envoyerParamVehicule"
        android:text="Envoyer" />

    <Button
        android:id="@+id/boutonSauverParam"
        android:layout_width="267dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView7"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="73dp"
        android:onClick="sauvegarderParametres"
        android:text="Sauvegarder" />

    <TextView
        android:id="@+id/tvRetour"
        android:layout_width="374dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="39dp"
        android:textAlignment="center"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>